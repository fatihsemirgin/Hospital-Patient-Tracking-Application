@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script>
        //const xValues = ["User Count", "Patient Count", "Visit Count"];
        //const yValues = [@ViewBag.UserCount, @ViewBag.PatientCount, @ViewBag.VisitCount];
        const barColors = [
            "#b91d47",
            "#00aba9",
            "#2b5797",
            "#e8c3b9",
            "#1e7145"
        ];

        new Chart("myChart", {
            type: "pie",
            data: {
                labels: ["Admin Count", "User Count "],
                datasets: [{
                    backgroundColor: barColors,
                    data: [@ViewBag.AdminCount, @ViewBag.UserCount]
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "User Types"
                }
            }
        });
        new Chart("myChart2", {
            type: "pie",
            data: {
                labels: ["Patient Count", "User Count"],
                datasets: [{
                    backgroundColor: ["#2b5797", "#C05611"],
                    data: [@ViewBag.PatientCount, @ViewBag.UserCount]
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "Patient Count / User Count"
                }
            }
        });
        new Chart("myChart3", {
            type: "pie",
            data: {
                labels: ["Visit Count", "Patient Count"],
                datasets: [{
                    backgroundColor: ["#e8c3b9",
                        "#1e7145"],
                    data: [@ViewBag.VisitCount, @ViewBag.PatientCount]
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "Visit Count / Patient Count"
                }
            }
        });
    </script>
}
<div class="row align-items-center justify-content-center">

    <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
    <canvas id="myChart2" style="width:100%;max-width:600px"></canvas>
    <canvas id="myChart3" style="width:100%;max-width:600px"></canvas>

</div>


